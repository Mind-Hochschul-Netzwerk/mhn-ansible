log:
  level: {{ traefik_log_level }}
  filePath: "/var/log/traefik.log"

accessLog:
  filePath: "/var/log/accesslog.log"
  filters:
    retryAttempts: true
    minDuration: "10ms"
    statusCodes:
      - "400-499"
      - "500-599"
api:
  dashboard: false

providers:
  file:
    directory: /etc/traefik/conf
    watch: true
  docker:
    endpoint: "tcp://dockerproxy:2375"
    exposedByDefault: false
    network: traefik

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: "websecure"
          scheme: https
          permanent: true
  websecure:
    address: ":443"
    http:
      middlewares:
        - secheader@file
      tls:
        certresolver: "hetztner"
        domains:
          - main: "*.{{ DOMAINNAME }}"
            sans:
              - "{{ DOMAINNAME }}"
{% if DOMAINNAME_2 is defined %}
              - "*.{{ DOMAINNAME_2 }}"
              - "{{ DOMAINNAME_2 }}"
{% endif %}

certificatesResolvers:
  cloudflare:
    acme:
      email: {{ traefik_cert_mail }}
      storage: /etc/traefik/acme/acme.json
      caserver: {{ traefik_ca_server }}
      dnsChallenge:
        provider: {{ traefik_dnschallenge_provider }}
        delayBeforeCheck: 3
        resolvers:
          - "1.1.1.1:53"
          - "1.0.0.1:53"
